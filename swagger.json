{
    "definition": {
        "openapi": "3.1.0",
        "info": {
            "title": "LogRocket Express API with Swagger",
            "version": "0.1.0",
            "description": "This is a simple CRUD API application made with Express and documented with Swagger",
            "license": {
                "name": "MIT",
                "url": "https://spdx.org/licenses/MIT.html"
            },
            "contact": {
                "name": "LogRocket",
                "url": "https://logrocket.com",
                "email": "info@email.com"
            }
        },
        "servers": [
            {
                "url": "http://localhost:3000/examapi/v1"
            }
        ],
        "components": {
            "schemas": {
                "blague": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "Id de la blague"
                        },
                        "question": {
                            "type": "string",
                            "description": "Blague"
                        },
                        "reponse": {
                            "type": "string",
                            "description": "Réponse"
                        }
                    },
                    "example": {
                        "id":2,
                        "question":"Que dit un oignon quand il se cogne ?",
                         "reponse":"Aïe !"
                    }
                },
                "addblague": {
                    "type": "object",
                    "properties": {
                        "message": {
                            "type": "string",
                            "description": "Message of the recipe"
                        },
                        "result": {
                            "type": "object",
                            "$ref": "#/components/schemas/blague"
                        }
                    }
                },
                "responseblague": {
                    "type": "object",
                    "properties": {
                        "result": {
                            "type": "object",
                            "$ref": "#/components/schemas/blague"
                        }
                    }
                },
                "error": {
                    "type": "object",
                    "properties": {
                        "error": {
                            "type": "string",
                            "description": "Message of the error"
                        }
                    }
                }
            }
        },
        "paths": {
            "/blague": {
                "get": {
                    "summary": "Retourne tout les blagues de la bdd",
                    "tags": [
                        "blague"
                    ],
                    "responses": {
                        "200": {
                            "description": "Tout les blagues de la bdd.",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/blague"
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Some server error"
                        }
                    }
                },
                "post": {
                    "summary": "Permet d'ajouter une blague a la bdd.",
                    "tags": [
                        "blague"
                    ],
                    "requestBody": {
                        "required": true,
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/blague"
                                }
                            }
                        }
                    },
                    "responses": {
                        "201": {
                            "description": "Create blague in database",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/addblague"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "/blague/{id}": {
                "get": {
                    "summary": "Get information about on joke",
                    "tags": [
                        "blague"
                    ],
                    "parameters": [
                        {
                            "in": "path",
                            "name": "id",
                            "schema": {
                                "type": "integer"
                            },
                            "required": true,
                            "description": "Id of the joke"
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "joke when id it ok",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/responseblague"
                                    }
                                }
                            }
                        },
                        "404": {
                            "description": "Error joke not found",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/error"
                                    }
                                }
                            }
                        },
                        "405": {
                            "description": "Error param is not a number",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/error"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "/blague/random": {
                "get": {
                    "summary": "Permet de récuperer une blague aléatoire",
                    "tags": [
                        "blague"
                    ],
                    "responses": {
                        "200": {
                            "description": "La blague selectionner alétoirement.",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/responseblague"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "apis": [
        "./routes/*.js"
    ]
}